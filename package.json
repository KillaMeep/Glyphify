{
  "name": "glyphify",
  "version": "0.0.0-dev",
  "description": "A modern Electron desktop application for converting images and videos to ASCII art",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:android": "npx cap sync android && cd android && ./gradlew assembleRelease",
    "cap:sync": "npx cap sync android",
    "cap:open": "npx cap open android"
  },
  "author": "KillaMeep",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "electron": "^28.1.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "canvas": "^3.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "gif-encoder": "^0.7.2",
    "gif.js": "^0.2.0",
    "mp4-muxer": "^5.1.2",
    "pngjs": "^6.0.0"
  },
  "build": {
    "appId": "com.killameep.Glyphify",
    "productName": "Glyphify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "assets/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**",
      "node_modules/ffprobe-static/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
